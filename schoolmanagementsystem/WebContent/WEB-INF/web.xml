<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>schoolmanagementsystem</display-name>
  <welcome-file-list>
    <welcome-file>view/index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>header</servlet-name>
    <jsp-file>/view/header.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>header</servlet-name>
    <url-pattern>/profile/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>studentregistration</servlet-name>
    <servlet-class>com.controller.student.servlets.StudentRegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>studentregistration</servlet-name>
    <url-pattern>/studentregistration</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>studentdetail</servlet-name>
    <jsp-file>/view/student/registeredstudentdetail.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>studentdetail</servlet-name>
    <url-pattern>/studentdetail</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>initialdetailadd</servlet-name>
    <servlet-class>com.controller.student.servlets.InitialdetailaddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>initialdetailadd</servlet-name>
    <url-pattern>/initialdetailadd</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>addsubject</servlet-name>
    <servlet-class>com.controller.student.servlets.AddSubjectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addsubject</servlet-name>
    <url-pattern>/addsubject</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>DeleteController</display-name>
    <servlet-name>DeleteController</servlet-name>
    <servlet-class>com.controller.DeleteController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteController</servlet-name>
    <url-pattern>*.del</url-pattern>
  </servlet-mapping>
 
  <servlet>
    <description></description>
    <display-name>AddController</display-name>
    <servlet-name>AddController</servlet-name>
    <servlet-class>com.controller.AddController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddController</servlet-name>
    <url-pattern>*.add</url-pattern>
  </servlet-mapping>
</web-app>